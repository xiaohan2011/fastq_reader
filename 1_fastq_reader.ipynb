   "cell_type": "code",
   "source": [
    "import os\n",
    "import shutil\n",
    "import subprocess\n",
    "import gzip\n",
    "import pandas as pd\n",
    "import matplotlib.pyplot as plt\n",

    """
    Input: fastq file path. 
    Optional input: fasta file path for reference.
    
    Output: 
    If fastq only: csv file of reads sorted based on length and a histogram. 
    If fastq and fasta: in addition to above, generate bam file in the same folder of fastq.
    """

    "# ---------------------------\n",
    "# User inputs\n",
    "# ---------------------------\n",
    "fastq_file = r'/Volumes/tsienlab/tsienlabspace/INNO-DATA-MOL/5 Sanger&Nanopore/25-12-22 987-34 LR/fasta_vs_fastq/D2Q6HK_1_987-34.fastq'  # REQUIRED (determines output folder)\n",
    "\n",
    "# OPTIONAL: set to None or \"\" to skip alignment\n",
    "fasta_file = '/Volumes/tsienlab/tsienlabspace/INNO-DATA-MOL/5 Sanger&Nanopore/25-12-22 987-34 LR/fasta_vs_fastq/987_725_TypeIIS_null.fa' # e.g. r\"/path/to/ref.fa\"  OR  \"ref.fa\" (if in same folder as FASTQ)\n",
    "\n",
    "bash_script = None  # optional, only used if fasta_file is provided\n",
    "\n",
    "\n",
    "# Histogram settings for 10â€“100 kb reads\n",
    "BIN_SIZE_BP = 2000   # 2 kb bins (try 1000 for 1 kb, 5000 for 5 kb)\n",
    "LOG_Y = False\n",
    "\n",
    "\n",
    "# ---------------------------\n",
    "# Helpers: robust path resolving\n",
    "# ---------------------------\n",
    "def resolve_file(folder, name, allowed_exts):\n",
    "    \"\"\"\n",
    "    Resolve file path given a folder and a name that may or may not include an extension.\n",
    "    allowed_exts should include leading dots.\n",
    "    \"\"\"\n",
    "    candidate = os.path.join(folder, name)\n",
    "    if os.path.isfile(candidate):\n",
    "        return candidate\n",
    "\n",
    "    base, ext = os.path.splitext(candidate)\n",
    "    if ext:  # user provided extension but file doesn't exist\n",
    "        raise FileNotFoundError(f\"File not found: {candidate}\")\n",
    "\n",
    "    # try allowed extensions\n",
    "    for e in allowed_exts:\n",
    "        cand = base + e\n",
    "        if os.path.isfile(cand):\n",
    "            return cand\n",
    "\n",
    "    # also try .gz variants (common for fastq)\n",
    "    for e in allowed_exts:\n",
    "        cand = base + e + \".gz\"\n",
    "        if os.path.isfile(cand):\n",
    "            return cand\n",
    "\n",
    "    raise FileNotFoundError(\n",
    "        f\"File not found: {candidate}\\nTried extensions: {allowed_exts} (+ .gz variants)\"\n",
    "    )\n",
    "\n",
    "\n",
    "def open_maybe_gzip(path, mode=\"rt\"):\n",
    "    return gzip.open(path, mode) if path.endswith(\".gz\") else open(path, mode)\n",
    "\n",
    "\n",
    "# ---------------------------\n",
    "# FASTQ parsing + QC\n",
    "# ---------------------------\n",
    "def read_fastq_4line(filename):\n",
    "    \"\"\"\n",
    "    Simple FASTQ reader assuming standard 4-line records:\n",
    "    @header\n",
    "    SEQ\n",
    "    +\n",
    "    QUAL\n",
    "    \"\"\"\n",
    "    sequences = []\n",
    "    quality_scores = []\n",
    "\n",
    "    with open_maybe_gzip(filename, \"rt\") as file:\n",
    "        while True:\n",
    "            header = file.readline().rstrip(\"\\n\")\n",
    "            if not header:\n",
    "                break\n",
    "            seq = file.readline().rstrip(\"\\n\")\n",
    "            plus = file.readline().rstrip(\"\\n\")\n",
    "            qual = file.readline().rstrip(\"\\n\")\n",
    "\n",
    "            if not seq or not qual:\n",
    "                continue\n",
    "            sequences.append(seq)\n",
    "            quality_scores.append(qual)\n",
    "\n",
    "    return sequences, quality_scores\n",
    "\n",
    "\n",
    "def calculate_average_quality(quality_scores):\n",
    "    avg = []\n",
    "    for qual in quality_scores:\n",
    "        qvals = [ord(c) - 33 for c in qual]\n",
    "        avg.append(sum(qvals) / len(qvals))\n",
    "    return avg\n",
    "\n",
    "\n",
    "def create_dataframe(sequences, quality_scores):\n",
    "    avgq = calculate_average_quality(quality_scores)\n",
    "    lengths = [len(s) for s in sequences]\n",
    "    return pd.DataFrame({\"Sequence\": sequences, \"Average Quality\": avgq, \"Length\": lengths})\n",
    "\n",
    "\n",
    "def save_summary_csv(df, fastq_path):\n",
    "    base, _ = os.path.splitext(fastq_path.replace(\".gz\", \"\"))\n",
    "    out_csv = f\"{base}_summary.csv\"\n",
    "    df.to_csv(out_csv, index=False)\n",
    "    print(f\"Summary saved to {out_csv}\")\n",
    "    return out_csv\n",
    "\n",
    "\n",
    "def save_length_histogram(df, fastq_path, bin_size_bp=2000, log_y=False):\n",
    "    base, _ = os.path.splitext(fastq_path.replace(\".gz\", \"\"))\n",
    "    out_png = f\"{base}_length_hist.png\"\n",
    "\n",
    "    lengths_bp = df[\"Length\"].dropna().astype(int)\n",
    "    if lengths_bp.empty:\n",
    "        print(\"No lengths found; histogram not created.\")\n",
    "        return None\n",
    "\n",
    "    max_len_bp = int(lengths_bp.max())\n",
    "    edges_bp = list(range(0, max_len_bp + bin_size_bp, bin_size_bp))\n",
    "\n",
    "    plt.figure()\n",
    "    plt.hist(lengths_bp / 1000.0, bins=[e / 1000.0 for e in edges_bp])\n",
    "    plt.xlabel(\"Read length (kb)\")\n",
    "    plt.ylabel(\"Number of reads\")\n",
    "    plt.title(f\"Read-length distribution (bin = {bin_size_bp/1000:.1f} kb)\")\n",
    "    if log_y:\n",
    "        plt.yscale(\"log\")\n",
    "\n",
    "    plt.tight_layout()\n",
    "    plt.savefig(out_png, dpi=300)\n",
    "    plt.close()\n",
    "    print(f\"Histogram saved to {out_png}\")\n",
    "    return out_png\n",
    "\n",
    "\n",
    "# ---------------------------\n",
    "# Alignment runner\n",
    "# ---------------------------\n",
    "def check_in_path(tool_name):\n",
    "    return shutil.which(tool_name) is not None\n",
    "\n",
    "\n",
    "def run_alignment_minimap2_samtools(fasta_path, fastq_path, out_bam, threads=4):\n",
    "    \"\"\"\n",
    "    Align FASTQ to FASTA using minimap2 + samtools, output sorted BAM + index.\n",
    "    Default preset uses ONT reads: map-ont\n",
    "    \"\"\"\n",
    "    if not check_in_path(\"minimap2\"):\n",
    "        raise RuntimeError(\"minimap2 not found in PATH. Install (e.g. brew install minimap2) or use bash_script.\")\n",
    "    if not check_in_path(\"samtools\"):\n",
    "        raise RuntimeError(\"samtools not found in PATH. Install (e.g. brew install samtools) or use bash_script.\")\n",
    "\n",
    "    out_bai = out_bam + \".bai\"\n",
    "\n",
    "    # minimap2 -> samtools sort (streaming, no intermediate SAM)\n",
    "    cmd1 = [\"minimap2\", \"-t\", str(threads), \"-ax\", \"map-ont\", fasta_path, fastq_path]\n",
    "    cmd2 = [\"samtools\", \"sort\", \"-@\", str(max(1, threads - 1)), \"-o\", out_bam]\n",
    "\n",
    "    print(\"Running:\", \" \".join(cmd1), \"|\", \" \".join(cmd2))\n",
    "    p1 = subprocess.Popen(cmd1, stdout=subprocess.PIPE, stderr=subprocess.PIPE, text=False)\n",
    "    p2 = subprocess.Popen(cmd2, stdin=p1.stdout, stdout=subprocess.PIPE, stderr=subprocess.PIPE, text=False)\n",
    "    p1.stdout.close()\n",
    "\n",
    "    _, err2 = p2.communicate()\n",
    "    _, err1 = p1.communicate()\n",
    "\n",
    "    if p1.returncode != 0:\n",
    "        raise RuntimeError(f\"minimap2 failed:\\n{err1.decode(errors='replace')}\")\n",
    "    if p2.returncode != 0:\n",
    "        raise RuntimeError(f\"samtools sort failed:\\n{err2.decode(errors='replace')}\")\n",
    "\n",
    "    # index\n",
    "    subprocess.run([\"samtools\", \"index\", out_bam], check=True)\n",
    "    print(f\"BAM saved to {out_bam}\")\n",
    "    print(f\"BAM index saved to {out_bai}\")\n",
    "    return out_bam, out_bai\n",
    "\n",
    "\n",
    "def run_alignment_via_bash(bash_script_path, fasta_path, fastq_path, out_bam):\n",
    "    \"\"\"\n",
    "    Calls your bash script. Assumes it can accept (fasta, fastq, out_bam) as args.\n",
    "    If your bash script doesn't take args yet, see template below.\n",
    "    \"\"\"\n",
    "    if not os.path.isfile(bash_script_path):\n",
    "        raise FileNotFoundError(f\"Bash script not found: {bash_script_path}\")\n",
    "\n",
    "    cmd = [\"bash\", bash_script_path, fasta_path, fastq_path, out_bam]\n",
    "    print(\"Running:\", \" \".join(cmd))\n",
    "    subprocess.run(cmd, check=True)\n",
    "    print(f\"BAM saved to {out_bam}\")\n",
    "    return out_bam\n",
    "\n",
    "\n",
    "# ---------------------------\n",
    "# Main\n",
    "# ---------------------------\n",
    "def main():\n",
    "    # Resolve FASTQ first (required)\n",
    "    fastq_path = resolve_file(\"\", fastq_file, allowed_exts=[\".fastq\", \".fq\"])\n",
    "    seq_folder = os.path.dirname(os.path.abspath(fastq_path))\n",
    "\n",
    "    print(\"FASTQ:\", fastq_path)\n",
    "    print(\"Output folder:\", seq_folder)\n",
    "\n",
    "    # FASTQ QC outputs (always run)\n",
    "    sequences, quality_scores = read_fastq_4line(fastq_path)\n",
    "    df = create_dataframe(sequences, quality_scores)\n",
    "    df_sorted = df.sort_values(by=\"Length\", ascending=False)\n",
    "\n",
    "    save_summary_csv(df_sorted, fastq_path)\n",
    "    save_length_histogram(df_sorted, fastq_path, bin_size_bp=BIN_SIZE_BP, log_y=LOG_Y)\n",
    "\n",
    "    # --- Robust optional inputs (won't crash if variables don't exist) ---\n",
    "    fasta_opt = globals().get(\"fasta_file\", None)\n",
    "    bash_opt  = globals().get(\"bash_script\", None)\n",
    "\n",
    "    # If FASTA not provided -> stop here\n",
    "    if not fasta_opt:\n",
    "        print(\"No FASTA provided; skipping alignment.\")\n",
    "        #print(df_sorted.head(10))\n",
    "        return\n",
    "\n",
    "    # Otherwise resolve FASTA and run alignment\n",
    "    fasta_opt = str(fasta_opt)\n",
    "    if os.path.dirname(fasta_opt):  # fasta_opt includes a folder component (relative or absolute)\n",
    "        fasta_path = resolve_file(\"\", fasta_opt, allowed_exts=[\".fa\", \".fasta\", \".fna\"])\n",
    "    else:\n",
    "        fasta_path = resolve_file(seq_folder, fasta_opt, allowed_exts=[\".fa\", \".fasta\", \".fna\"])\n",
    "\n",
    "    print(\"FASTA:\", fasta_path)\n",
    "\n",
    "    fasta_base = os.path.splitext(os.path.basename(fasta_path))[0]\n",
    "    fastq_base = os.path.splitext(os.path.basename(fastq_path.replace(\".gz\", \"\")))[0]\n",
    "    out_bam = os.path.join(seq_folder, f\"{fasta_base}_vs_{fastq_base}.bam\")\n",
    "\n",
    "    threads = min(8, os.cpu_count() or 4)\n",
    "    if bash_opt:\n",
    "        run_alignment_via_bash(str(bash_opt), fasta_path, fastq_path, out_bam)\n",
    "    else:\n",
    "        run_alignment_minimap2_samtools(fasta_path, fastq_path, out_bam, threads=threads)\n",
    "\n",
    "    #print(df_sorted.head(10))\n",
    "\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    main()\n"
   ],
